
@{
    ViewBag.Title = "Show";
}

<h1>Afisare Categorie</h1>

<h2>@ViewBag.Category.CategoryName</h2>
<p>@ViewBag.Category.CategoryDescription</p>

<a href="/Categories/Edit/@ViewBag.Category.CategoryId">Modifica categoria</a>
<br />
<br />
<form method="post" action="/Categories/Delete/@ViewBag.Category.CategoryId">
    @Html.HttpMethodOverride(HttpVerbs.Delete)
    <button type="submit">Sterge categorie</button>
</form>
<hr />
<a href="/Categories/Index">Inapoi la categorii</a>
<br /> <br />
<a href="/Categories/New">Adauga categorie</a>
<br />
