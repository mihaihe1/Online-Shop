
@{
    ViewBag.Title = "Show";
}

<h1>Afisare Produs</h1>
<h2>Nume: @ViewBag.Product.Title</h2>
<p>Descriere: @ViewBag.Product.Description</p>
<p>Pret: @ViewBag.Product.Price</p>
<p>Rating: @ViewBag.Product.Rating</p>
@foreach (var review in ViewBag.Product.Reviews)
{
    <br />
    <p>Comentariu: @review.ReviewComment</p>
    <p>Rating: @review.ReviewRating</p>
    <br />
    
}
<a class="btn btn-info" href="/Reviews/New/@ViewBag.Product.Id">Adauga comentariu</a>

<br />
<a href="/Products/Edit/@ViewBag.Product.Id">Modifica produs</a>
<form method="post" action="/Products/Delete/@ViewBag.Product.Id">
    @Html.HttpMethodOverride(HttpVerbs.Delete)
    <button type="submit">Sterge produs</button>
</form>
<br /> <br />
<a href="/Products/New">Adauga produs</a>
<br /> <br />
<a href="/Products/Index">Inapoi la produse</a>