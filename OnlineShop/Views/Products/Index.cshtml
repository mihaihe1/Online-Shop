
@{
    ViewBag.Title = "Index";
}

<h1>Afisarea produse</h1>

@foreach (var product in ViewBag.Products)
{
    <h1>Nume: @product.Title</h1>
    <p>Descriere: @product.Description</p>
    <p>Pret: @product.Price</p>
    <p>Rating: @product.Rating</p>
    <p>Categorie: @product.Category.CategoryName</p>
    <a href="/Products/Show/@product.Id">Afisare produs</a>
}
